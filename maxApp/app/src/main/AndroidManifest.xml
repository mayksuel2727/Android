<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maxapp">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Alvaras"
            android:parentActivityName=".Hist_Pedidos"
            android:screenOrientation="portrait"
            ></activity>
        <activity
            android:name=".Hist_Pedidos"
            android:parentActivityName=".Dados_Cliente"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Dados_Cliente"
            android:parentActivityName=".Menu_Principal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu_Principal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>